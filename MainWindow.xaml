<Window x:Class="GroceryProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroceryProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Button Click="SelectImage" Grid.Row="0" Height="40" Width="200">Select Image</Button>
            <TextBlock x:Name="store" FontSize="20" Grid.Row="1">StoreName</TextBlock>
            <TextBlock x:Name="lineCount" FontSize="20" Grid.Row="2">LineCount</TextBlock>
            <TextBlock x:Name="total" FontSize="20" Grid.Row="3">total</TextBlock>
            <TextBlock x:Name="subtotal" FontSize="20" Grid.Row="4">subtotal</TextBlock>
            <TextBlock x:Name="tax1" FontSize="20" Grid.Row="5">tax1</TextBlock>
            <TextBlock x:Name="tax2" FontSize="20" Grid.Row="6">tax2</TextBlock>
            <TextBlock x:Name="id" FontSize="20" Grid.Row="7">id</TextBlock>
            <TextBox x:Name="itemsBox" Grid.Row="8"/>
        </Grid>
        <TextBox x:Name="richText" Grid.Column="1"/>
    </Grid>
</Window>
